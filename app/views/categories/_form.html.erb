<%= render 'shared/errors', obj: @category %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@category, :html => { class: "form-horizontal", role: "form"}) do |f|%>
            <div class="form-group">
                <div class="control-label col-sm-2"> 
                    <%= f.label :name %> 
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %> 
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@category.new_record? ? "Create" : "Update", class: "btn btn-default btn-lg") %>
                    <%= link_to "Cancel", categories_path, class: "btn btn-default btn-lg", role: "button" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
